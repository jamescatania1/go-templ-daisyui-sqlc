package templates

templ Layout(content templ.Component, title string) {
	<!DOCTYPE html>
	<html lang="en">
		<head>
			<meta charset="UTF-8"/>
			<meta name="viewport" content="width=device-width, initial-scale=1.0"/>
			<title>{ title }</title>
			<link rel="stylesheet" href="/static/index.css"/>
		</head>
		<body>
			@content
		</body>
	</html>
}
